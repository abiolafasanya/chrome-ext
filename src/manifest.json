{
  "manifest_version": 3,
  "name": "HelpMeOut",
  "version": "1.0.1",
  "description": "Help out by creating videos on how to get things done and sending out instantly",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  },
  
  "permissions": ["tabs", "activeTab", "scripting","messaging"]
}
